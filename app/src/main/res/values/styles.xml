<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoadingActivity" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/colorAlpha</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ProgressBarWatch" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar_watch</item>
        <item name="android:minWidth">200dp</item>
    </style>

</resources>
